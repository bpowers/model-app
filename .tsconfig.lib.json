{
  "files": [
    "src/ast.ts",
    "src/common.ts",
    "src/lex.ts",
    "src/model.ts",
    "src/parse.ts",
    "src/project.ts",
    "src/sd.ts",
    "src/sim.ts",
    "src/sim-builder.ts",
    "src/util.ts",
    "src/vars.ts",
    "src/xmile.ts"
  ],

  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "build",

    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],

    "strictPropertyInitialization": false,

    "noImplicitAny": true,
    "newLine": "LF",

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,

    "strict": true,
    "strictNullChecks": true,

    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node"
  }
}
