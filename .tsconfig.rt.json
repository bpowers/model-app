{
  "files": [
    "runtime/runtime.ts",
    "runtime/generated.d.ts",
    "runtime/epilogue.ts"
  ],

  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "outDir": "build-rt",

    "lib": [
      "webworker",
      "es2016"
    ],

    "types": [],

    "strictPropertyInitialization": false,

    "noImplicitAny": true,
    "newLine": "LF",

    "sourceMap": false,
    "declaration": true,
    "removeComments": true,

    "strict": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node"
  }
}
