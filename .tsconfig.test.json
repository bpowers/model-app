{
  "files": [
    "test/lex.ts",
    "test/parse.ts",
    "test/serialization.ts"
  ],

  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "test",

    "lib": [
      "dom",
      "dom.iterable",
      "es2016",
      "es2017.sharedmemory"
    ],

    "strictPropertyInitialization": false,

    "noImplicitAny": true,
    "newLine": "LF",

    "sourceMap": false,
    "declaration": false,
    "removeComments": true,

    "strict": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node"
  }
}
