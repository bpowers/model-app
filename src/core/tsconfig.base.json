{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "lib": ["es2018"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "public",
    "node_modules",
    "lib",
    "lib.browser",
    "build",
    "build-component",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "bin",
    "test",
    "config",
    "support"
  ],
}
