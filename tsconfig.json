{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2018", "dom", "dom.iterable"],
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false
  },
  "exclude": [
    "src/app/**/*.test.tsx",
    "app",
    "public",
    "node_modules",
    "build",
    "build-component",
    "build-rt",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "lib",
    "bin",
    "runtime/*.ts",
    "test",
    "config",
    "support"
  ]
}
